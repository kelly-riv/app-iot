<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFDD"
    tools:context=".Login">

    <EditText
        android:id="@+id/txt_input_login_nombre"
        android:layout_width="230dp"
        android:layout_height="63dp"
        android:layout_marginBottom="388dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txt_login_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="La Florería de Martina"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4CAF50"
        android:textColorHighlight="#4E2727"
        android:textSize="10pt"
        app:layout_constraintBottom_toTopOf="@+id/txt_input_login_nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txt_input_login_password"
        android:layout_width="229dp"
        android:layout_height="66dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_input_login_nombre"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/btn_login_iniciarSesion"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:backgroundTint="#648C2C"
        android:text="Iniciar sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_input_login_password"
        app:layout_constraintVertical_bias="0.238" />

    <ImageView
        android:id="@+id/img_login_logo"
        android:layout_width="68dp"
        android:layout_height="73dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toStartOf="@+id/txt_login_titulo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flor"
        app:tint="#648C2C" />



    <TextView
        android:id="@+id/txt_login_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Ingrese sus datos"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_login_titulo" />
</androidx.constraintlayout.widget.ConstraintLayout>